# Cloudflare Pages redirects
# https://developers.cloudflare.com/pages/configuration/redirects/

# Studio route handling - explicit rules to prevent homepage redirect
/studio /studio/ 200
/studio/* /studio/:splat 200

# Admin redirect only
/admin /admin/ 200

# Brand routes with Chinese character support
/brands/:slug /brands/:slug/ 200
/brands/:slug/products /brands/:slug/products/ 200
/brands/:slug/solutions /brands/:slug/solutions/ 200
/brands/:slug/support /brands/:slug/support/ 200

# API routes (if any)
/api/* /api/:splat 200