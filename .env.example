# ==============================================
# 力通电子网站 - 环境变量模板
# ==============================================

# 网站基础配置
NEXT_PUBLIC_SITE_URL=https://elec-distributor.com
NEXT_PUBLIC_SITE_NAME=力通电子
NEXT_PUBLIC_SITE_DESCRIPTION=专业的电子元件代理商

# Sanity CMS 配置
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_api_token
SANITY_PREVIEW_SECRET=your_preview_secret
SANITY_STUDIO_PREVIEW_URL=http://localhost:3000/api/preview

# 数据库配置 (如果需要)
DATABASE_URL=postgresql://username:password@localhost:5432/litong

# 第三方服务配置
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# 微信公众号配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@elec-distributor.com

# 文件上传配置
UPLOAD_DIR=public/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# API安全配置
JWT_SECRET=your_jwt_secret_key_here
API_SECRET_KEY=your_api_secret_key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis配置 (缓存)
REDIS_URL=redis://localhost:6379

# CDN配置
CDN_URL=https://cdn.elec-distributor.com
NEXT_PUBLIC_CDN_URL=https://cdn.elec-distributor.com

# 支付配置
# 微信支付
WECHAT_PAY_APPID=your_wechat_pay_appid
WECHAT_PAY_MCH_ID=your_merchant_id
WECHAT_PAY_KEY=your_wechat_pay_key

# 支付宝
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 物流配置
SF_APP_ID=your_sf_app_id
SF_APP_KEY=your_sf_app_key

# 监控和分析
SENTRY_DSN=your_sentry_dsn
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# 开发环境配置
NODE_ENV=development
PORT=3000

# 构建配置
ANALYZE=false
NEXT_TELEMETRY_DISABLED=1